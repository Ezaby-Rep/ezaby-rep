---
import Main from '../components/Main.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
const pass = 'islam2023';
const pageTitle = 'قسم الطلبيات | تسجيل الدخول';
---

<BaseLayout pageTitle={pageTitle}>
	<div
		class='page-title arab-txt mr-4 pr-2 lg:mr-0 flex justify-end items-center border-right border-r-4 border-gray-600'
	>
		<h1
			class='text-xl md:text-2xl lg:text-3xl font-bold lg:font-semibold text-gray-900'
			dir='rtl'
		>
			سجل الدخول
		</h1>
	</div>
	<main class='gap-6 pt-16'>
		<div class='mr-4 w-72'>
			<label
				for='password'
				dir='rtl'
				class='block mb-2 text-lg lg:text-xl font-medium text-gray-900 arab-txt'
				>كلمة السر</label
			>
			<input
				type='password'
				id='password'
				name='password'
				class='bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5'
				required
			/>
			<p id='invalid-pass' class='text-red-600 arab-txt text-sm invisible'>
				...كلمة السر غير صحيحة
			</p>
		</div>
		<div
		id="spinner"
			class='self-center w-12 h-12 rounded-full animate-spin border-2 border-solid border-sky-700 border-t-transparent invisible'
		>
		</div>
	</main>
</BaseLayout>

<script>
	import '../scripts/login.js';
</script>
